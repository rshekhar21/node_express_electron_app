<%-include('../templates/modalhead.ejs') %>
  <div class="modal-body">
    <form class="row g-3" id="party-form">
      <div class="col-md-3">
        <label for="ptype" class="form-label">Party Type</label>
        <select id="ptype" class="form-select" name="ptype" required>
          <option selected>Contractor</option>
          <option>Customer</option>
          <option>Employee</option>
          <option>Supplier</option>
        </select>
      </div>
      <div class="col-md-5">
        <label for="name" class="form-label">Party Name</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="col-md-4">
        <label for="contact" class="form-label">Contact No.</label>
        <input type="text" class="form-control" id="contact" name="contact">
      </div>
      
      <!-- 2nd row -->
      <div class="col-md-5">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email">
      </div>

      <div class="col-7">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" placeholder="1234 Main St">
      </div>

      <!-- 3rd row -->
      <div class="col-md-4">
        <label for="balamt" class="form-label">Opening Balance</label>
        <input type="number" class="form-control" id="balamt" name="balamt">
      </div>
      <div class="col-md-4">
        <label for="baltype" class="form-label">Balance Type...</label>
        <select id="baltype" class="form-select" name="baltype">
          <option>Pay</option>
          <option>Receive</option>
        </select>
      </div>
      <div class="col-md-4">
        <label for="baldate" class="form-label">Balance on Date</label>
        <input type="date" class="form-control" id="baldate" name="baldate">
      </div>
      

      <!-- 4th row -->     
      <div class="col-md-4">
        <label for="pan" class="form-label">Pan Num</label>
        <input type="text" class="form-control" id="pan" name="pan">
      </div> 
      <div class="col-md-4">
        <label for="refby" class="form-label">Reference</label>
        <input type="text" class="form-control" id="refby" name="refby">
      </div>
      <div class="col-md-4">
        <label for="regdate" class="form-label">Registered On</label>
        <input type="date" class="form-control" id="regdate" name="regdate">
      </div>

      <!-- 5th row  -->
      <div class="col-md-12">
        <label for="comments" class="form-label">Commetns</label>
        <input type="text" class="form-control" id="comments" name="comments">
      </div>
      <span class="d-none" id="delid"></span>
      <%-include('../templates/modalfootbuttons.ejs') %>
    </form>
  </div>
<%-include('../templates/modalfoot.ejs') %>
<script src="/js/party.js" type="module"></script> 
<%-include('../templates/footer.ejs') %>